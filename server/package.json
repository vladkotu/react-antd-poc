{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "db:tables":"node ./build/db/scripts/setup-dynamodb-tables.js --reset" ,
    "db:setup": "npm-run-all build db:tables",
    "test": "NODE_ENV=test jest",
    "lint": "eslint ./src",
    "format": "prettier-eslint --write $PWD/'src/**/*.js'",
    "client": "cd ../client && yarn start",
    "babel": "babel ./src --out-dir build  --ignore node_modules --copy-files",
    "clean": "rimraf ./build",
    "build": "npm-run-all clean babel",
    "server": "node ./build/server.local.js",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "dev:all": "concurrently \"yarn nodemon\" \"yarn client\""
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true,
            "node": "current"
          }
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.643.0",
    "aws-serverless-express": "^3.3.6",
    "config": "^3.3.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-prettify": "^0.1.1",
    "express-validator": "^6.4.0",
    "faker": "^4.1.0",
    "log4js": "^6.1.2",
    "mocker-data-generator": "^2.6.6",
    "morgan": "~1.9.1",
    "node-persist": "^3.0.5",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "supertest": "^4.0.2"
  }
}
